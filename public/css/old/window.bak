/*************** WINDOW ******************/
/*
  Styling for the outside of the window class.
*/
.window {
  background-color: lightgray;
  border-radius: 4px;
  box-shadow: 15px 15px 12px rgba(50, 50, 50, 0.55);
  color: black;
  display: -webkit-box;
  display: -moz-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  overflow: hidden; }

/*
  
*/
.window-header {
  background: linear-gradient(whitesmoke, lightgray);
  border-bottom: 1px solid darkgray;
  z-index: 10; }

/*
  
*/
.window-body {
  background-color: white;
  flex: 1;
  width: 100%; }

/*
  
*/
.window-footer {
  color: black;
  z-index: 10; }

/*************** SIDENAV ******************/
/*
  
*/
.sidenav {
  background-color: whitesmoke;
  border-right: 1px solid lightgray;
  overflow-x: hidden;
  overflow-y: auto; }

.sidenav-list {
  list-style-type: none; }

/*
  
*/
.sidenav-link {
  color: black;
  text-decoration: none; }

/*
  
*/
.sidenav-link.hover {
  text-decoration: none; }

/*
  
*/
.sidenav.hover:not(.active) {
  background-color: lightgray; }

/*
  
*/
.sidenav-text {
  display: none; }

/*************** WINDOW-CONTENT ******************/
.window-main {
  height: inherit;
  overflow-y: auto; }

/*************** RESPONSIVE DESIGN ******************/
/*  */
@media screen and (min-width: 768px) {
  .sidenav-text {
    display: inline; } }
